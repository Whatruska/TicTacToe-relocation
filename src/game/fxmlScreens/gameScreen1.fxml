    <Line strokeWidth="2" startX="60" endX="240" startY="300" endY="300" fill="darkgrey"/>

    <Line strokeWidth="2" startX="1040" endX="1220" startY="240" endY="240" fill="darkgrey"/>
    <Line strokeWidth="2" startX="1040" endX="1220" startY="60" endY="60" fill="darkgrey"/>
    <Line strokeWidth="2" startX="1220" endX="1220" startY="60" endY="240" fill="darkgrey"/>
    <Line strokeWidth="2" startX="1040" endX="1040" startY="60" endY="240" fill="darkgrey"/>
    <Line strokeWidth="2" startX="1220" endX="1220" startY="240" endY="300" fill="darkgrey"/>
